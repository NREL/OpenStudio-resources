#ifndef RESOURCES_HXX
#define RESOURCES_HXX

#include <utilities/core/Path.hpp>

inline openstudio::path resourcesPath()
{
  return openstudio::toPath("${CMAKE_CURRENT_BINARY_DIR}");
}

inline openstudio::path sourcePath()
{
  return openstudio::toPath("${CMAKE_SOURCE_DIR}");
}

inline openstudio::path productsPath()
{
  return openstudio::toPath("${CMAKE_BINARY_DIR}/Products/");
}

#endif // RESOURCES_HXX

